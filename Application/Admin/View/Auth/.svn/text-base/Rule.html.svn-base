<extend name="Public:parent" />
<block name="content">
<div id="div">
    <p>
    <button type="button" class="btn btn-primary pull-right" id="add">
        <i class="halflings-icon white plus"></i>
         <i class="halflings-icon white th-list"></i>    
        </button>
    
    </p>
    
</div>
<div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header" data-original-title>
						<h2><i class="halflings-icon user"></i><span class="break"></span>规则列表</h2>
						<div class="box-icon">
							<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
							<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
							<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-hover table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>规则名称</th>
								  
								
                                  <th>规则内容</th>
                                
                                  
								  <th>规则操作</th>
							  </tr>
						  </thead>   
						  <tbody>
							<foreach name="data" item="rule">
							<tr>
								<td>{$rule['title']}</td>
								
                                <td class="center">
                                  {$rule['name']}
								</td>
								<td class="center">
								
									<a class="btn btn-info" href="__APP__/Auth/ruleMod/id/{$rule['id']}.html">
										<i class="halflings-icon white edit"></i>  
									</a>
									<a class="btn btn-danger" href="__APP__/Auth/ruleDel/id/{$rule['id']}.html">
										<i class="halflings-icon white trash"></i> 
									</a>
                                 
								</td>
							</tr>
							</foreach>
							
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->
            <script src="__PUBLIC__/Admin/js/jquery.js"></script>
            <script>
                $("#add").click(function(){
                    window.location="__APP__/Auth/ruleAdd.html"; 
                });
           
            </script>
    
</block>
