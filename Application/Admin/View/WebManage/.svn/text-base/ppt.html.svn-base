<extend name="Public:parent" />
<block name="content">
<div class="row-fluid sortable">		
				<div class="box span12">
					<div class="box-header" data-original-title>
						<h2><i class="halflings-icon user"></i><span class="break"></span>幻灯片管理</h2>
						<div class="box-icon">
							<a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
							<a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
							<a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
						</div>
					</div>
					<div class="box-content">
						<table class="table table-hover table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>张次</th>
								  <th>图片</th>
								  <th>操作</th>
							  </tr>
						  </thead>   
						  <tbody>
							  <foreach name="datas" item="data">
								 <tr>
									 <td class="center">{$data['id']}</td>
									<td>
										<img style="width:100px;" src="__PUBLIC__/Admin/{$data['logo']}">
									</td>
									<td class="center">
										<a class="btn btn-info" href="__CONTROLLER__/modppt/id/{$data['id']}">
											<i class="halflings-icon white edit"></i>  
										</a>
										<!--
										<a class="btn btn-danger" href="__CONTROLLER__/delppt/id/{$data['id']}">
											<i class="halflings-icon white trash"></i> 
										</a>
										-->
									</td>
								</tr>
							</foreach>
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
			</div><!--/row-->
</block>
