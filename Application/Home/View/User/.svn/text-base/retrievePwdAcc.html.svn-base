<extend name="Public:parent" />
<block name="title">
	找回密码
</block>
<block name="content">
	<div class="men">
		<div class="container">
			<div class="col-md-11 register">
                <form class="form-horizontal" role="form" method="post" action="__APP__/user/CheckRetrieveAcc.html" enctype="multipart/form-data"> 
					 <div class="form-group">
						 <div class="col-md-offset-5">
							 <h3 class="text-success">找回密码-验证账号</h3>
						 </div>
						 <br />
						
						 <div class="form-group">
                            <label class="col-md-3 control-label">请输入账号:</label>
                            <span id="usernameTipR"></span>
							<div class="col-xs-6">
                                <input name="username" class="form-control col-md-4" type="text" id="usernameR">
							</div>
                        </div>
						
						 <div class="form-group">
						 <div class="col-md-offset-3 col-md-10">
                             <button type="submit" name="submit" class="btn btn-info" value="value" id="change">提交</button>
							 <button type="reset" class="btn btn-danger">重置</button>
						 </div>
						 <div class="clearfix"> </div>
						 </div>
					  </div>
				   </form>
			   </div>
		 </div>
	</div>
<script>
        
    mark = '';
    $("#usernameR").blur(function(){
       
       length = $("#usernameR").val().length;
       if(length!=0){
           
            mark = 1;
        }else{
            $("#usernameTipR").html("输入用户名!");
            $("#usernameTipR").css("color","red");
        } 
    }); 

    $("#change").click(function(){
        if(mark){
            return true; 
        }else{
            return false; 
        } 
    });
</script>
</block>
